    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Initialize charts
        let bookingChart = null;
        let referralChart = null;

        // Global variables
        let currentPage = 1;
        let totalPages = 1;
        let currentStatusFilter = 'all'; // Show all bookings by default
        const itemsPerPage = 10;

        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', function () {
            console.log('üìä Dashboard loaded');

            // Initialize charts
            initializeCharts();

            // Load all bookings initially
            loadBookings(currentPage, currentStatusFilter);

            // Status filter change event
            document.getElementById('statusFilter').addEventListener('change', function (e) {
                currentStatusFilter = e.target.value;
                currentPage = 1;
                loadBookings(currentPage, currentStatusFilter);
            });
        });

        // Function to initialize charts
        function initializeCharts() {
            // Booking Trends Chart
            const bookingCtx = document.getElementById('bookingChart');
            if (bookingCtx) {
                bookingChart = new Chart(bookingCtx, {
                    type: 'line',
                    data: {
                        labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                        datasets: [{
                            label: 'Bookings',
                            data: [65, 59, 80, 81, 56, 55, 40],
                            backgroundColor: 'rgba(78, 115, 223, 0.1)',
                            borderColor: 'rgba(78, 115, 223, 1)',
                            borderWidth: 2,
                            tension: 0.4,
                            fill: true,
                            pointBackgroundColor: 'rgba(78, 115, 223, 1)',
                            pointBorderColor: '#fff',
                            pointBorderWidth: 2,
                            pointRadius: 5
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: true,
                                position: 'top',
                                labels: {
                                    font: {
                                        size: 12
                                    }
                                }
                            },
                            tooltip: {
                                mode: 'index',
                                intersect: false
                            }
                        },
                        scales: {
                            x: {
                                grid: {
                                    display: true,
                                    drawBorder: false
                                }
                            },
                            y: {
                                beginAtZero: true,
                                grid: {
                                    display: true,
                                    drawBorder: false
                                },
                                ticks: {
                                    stepSize: 20
                                }
                            }
                        }
                    }
                });
            }

            // Direct Social Referral Chart
            const referralCtx = document.getElementById('referralChart');
            if (referralCtx) {
                referralChart = new Chart(referralCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Facebook', 'Instagram', 'Twitter', 'YouTube', 'Others'],
                        datasets: [{
                            data: [35, 25, 20, 12, 8],
                            backgroundColor: [
                                'rgba(78, 115, 223, 0.8)',
                                'rgba(231, 74, 59, 0.8)',
                                'rgba(28, 200, 138, 0.8)',
                                'rgba(246, 194, 62, 0.8)',
                                'rgba(108, 117, 125, 0.8)'
                            ],
                            borderColor: [
                                'rgba(78, 115, 223, 1)',
                                'rgba(231, 74, 59, 1)',
                                'rgba(28, 200, 138, 1)',
                                'rgba(246, 194, 62, 1)',
                                'rgba(108, 117, 125, 1)'
                            ],
                            borderWidth: 2,
                            hoverOffset: 15
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    padding: 20,
                                    font: {
                                        size: 12
                                    },
                                    usePointStyle: true,
                                    pointStyle: 'circle'
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function (context) {
                                        let label = context.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        const value = context.raw || 0;
                                        label += value + '%';
                                        return label;
                                    }
                                }
                            }
                        },
                        cutout: '70%'
                    }
                });
            }
        }

        // Function to load bookings
        async function loadBookings(page = 1, status = 'all') {
            console.log(`üì° Loading bookings: Page ${page}, Status: ${status}`);

            const loadingSpinner = document.getElementById('loadingSpinner');
            const tableContainer = document.getElementById('bookingsTableContainer');
            const paginationContainer = document.getElementById('paginationContainer');

            // Show loading spinner
            loadingSpinner.classList.add('active');
            tableContainer.innerHTML = '';
            paginationContainer.innerHTML = '';

            try {
                // Call the API endpoint
                const apiUrl = `/booking/admin/all?page=${page}&limit=${itemsPerPage}&status=${status}`;
                console.log('API URL:', apiUrl);

                const response = await fetch(apiUrl);

                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }

                const result = await response.json();
                console.log('API Response:', result);

                if (result.success) {
                    const { bookings, pagination } = result.data;

                    if (!bookings || bookings.length === 0) {
                        showNoBookingsMessage();
                        return;
                    }

                    currentPage = pagination.currentPage || page;
                    totalPages = pagination.totalPages || 1;

                    // Render the table with bookings data
                    renderBookingsTable(bookings);

                    // Render pagination
                    renderPagination(pagination);

                } else {
                    showErrorMessage(result.message || 'Failed to load bookings');
                }
            } catch (error) {
                console.error('‚ùå Error loading bookings:', error);
                showErrorMessage('Error loading bookings: ' + error.message);
            } finally {
                loadingSpinner.classList.remove('active');
            }
        }

        // Function to render bookings table
        function renderBookingsTable(bookings) {
            const tableContainer = document.getElementById('bookingsTableContainer');

            let tableHTML = `
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>User name</th>
                        <th>Movie</th>
                        <th>Theater</th>
                        <th>Show Time</th>
                        <th>Seats</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Booked At</th>
                    </tr>
                </thead>
                <tbody>
        `;

            bookings.forEach(booking => {
                // User info
                const userName = booking.user?.name || booking.user?.username || 'N/A';

                // Movie info
                const movieTitle = booking.movie?.title || booking.movie?.moviename || 'N/A';
                const moviePoster = booking.movie?.poster || '/images/default-movie.jpg';

                // Theater info
                const theaterName = booking.theater?.name || booking.theater?.theatername || 'N/A';
                const theaterLocation = booking.theater?.location || booking.theater?.district || '';

                // Show time
                let showTime = 'N/A';
                if (booking.show && booking.show.date) {
                    const date = new Date(booking.show.date);
                    showTime = date.toLocaleDateString();
                    if (booking.show.timeSlots && booking.show.timeSlots.length > 0) {
                        showTime += ' ' + booking.show.timeSlots[0];
                    }
                }

                // Seats
                const seats = Array.isArray(booking.seats) ? booking.seats : [];

                // Amount
                const amount = booking.totalAmount ? `$${booking.totalAmount.toFixed(2)}` : '$0.00';

                // Status
                const paymentStatus = booking.paymentStatus || 'Unknown';
                const statusBadge = getStatusBadge(paymentStatus);

                // Booked At
                let bookedAt = 'N/A';
                if (booking.bookedAt) {
                    bookedAt = new Date(booking.bookedAt).toLocaleDateString();
                }

                tableHTML += `
                <tr>
                    <td>${escapeHtml(userName)}</td>
                    <td>
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="${escapeHtml(moviePoster)}" 
                                 alt="${escapeHtml(movieTitle)}" 
                                 class="movie-poster me-2"
                                 style="width:100px; height:50px"
                                 onerror="this.src='/images/default-movie.jpg'">
                            <div>
                                <strong>${escapeHtml(movieTitle)}</strong>
                            </div>
                        </div>
                    </td>
                    <td>
                        <strong>${escapeHtml(theaterName)}</strong><br>
                        <small class="text-muted">${escapeHtml(theaterLocation)}</small>
                    </td>
                    <td>${escapeHtml(showTime)}</td>
                    <td>
                        <div class="seat-badges">
                            ${seats.map(seat => `
                                <span class="badge bg-info text-dark">${escapeHtml(seat)}</span>
                            `).join('')}
                        </div>
                        <small class="text-muted">${seats.length} seat(s)</small>
                    </td>
                    <td>
                        <strong>${amount}</strong>
                    </td>
                    <td>
                        <span class="badge ${statusBadge.class}">
                            ${statusBadge.icon}
                            ${escapeHtml(paymentStatus)}
                        </span>
                    </td>
                    <td>
                        ${bookedAt}
                    </td>
                </tr>
            `;
            });

            tableHTML += `
                </tbody>
            </table>
        `;

            tableContainer.innerHTML = tableHTML;
        }

        // Function to get status badge
        function getStatusBadge(paymentStatus) {
            paymentStatus = paymentStatus || 'Unknown';

            let badgeClass = 'bg-secondary';
            let icon = '<i class="fas fa-question-circle me-1"></i>';

            switch (paymentStatus.toLowerCase()) {
                case 'paid':
                    badgeClass = 'bg-success';
                    icon = '<i class="fas fa-check-circle me-1"></i>';
                    break;
                case 'pending':
                    badgeClass = 'bg-warning text-dark';
                    icon = '<i class="fas fa-clock me-1"></i>';
                    break;
                case 'cancelled':
                    badgeClass = 'bg-danger';
                    icon = '<i class="fas fa-times-circle me-1"></i>';
                    break;
                case 'unpaid':
                    badgeClass = 'bg-secondary';
                    icon = '<i class="fas fa-exclamation-circle me-1"></i>';
                    break;
            }

            return { class: badgeClass, icon: icon };
        }

        // Function to render pagination
        function renderPagination(pagination) {
            const paginationContainer = document.getElementById('paginationContainer');

            if (!pagination || pagination.totalPages <= 1) {
                paginationContainer.innerHTML = '';
                return;
            }

            let paginationHTML = `
            <ul class="pagination justify-content-center mt-3">
                <li class="page-item ${pagination.currentPage === 1 ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="changePage(${pagination.currentPage - 1})">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
        `;

            // Show limited page numbers
            const maxPagesToShow = 5;
            let startPage = Math.max(1, pagination.currentPage - Math.floor(maxPagesToShow / 2));
            let endPage = startPage + maxPagesToShow - 1;

            if (endPage > pagination.totalPages) {
                endPage = pagination.totalPages;
                startPage = Math.max(1, endPage - maxPagesToShow + 1);
            }

            if (startPage > 1) {
                paginationHTML += `
                <li class="page-item">
                    <a class="page-link" href="#" onclick="changePage(1)">1</a>
                </li>
                ${startPage > 2 ? '<li class="page-item disabled"><span class="page-link">...</span></li>' : ''}
            `;
            }

            for (let i = startPage; i <= endPage; i++) {
                if (i === pagination.currentPage) {
                    paginationHTML += `
                    <li class="page-item active">
                        <span class="page-link">${i}</span>
                    </li>
                `;
                } else {
                    paginationHTML += `
                    <li class="page-item">
                        <a class="page-link" href="#" onclick="changePage(${i})">${i}</a>
                    </li>
                `;
                }
            }

            if (endPage < pagination.totalPages) {
                paginationHTML += `
                ${endPage < pagination.totalPages - 1 ? '<li class="page-item disabled"><span class="page-link">...</span></li>' : ''}
                <li class="page-item">
                    <a class="page-link" href="#" onclick="changePage(${pagination.totalPages})">${pagination.totalPages}</a>
                </li>
            `;
            }

            paginationHTML += `
                <li class="page-item ${pagination.currentPage === pagination.totalPages ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="changePage(${pagination.currentPage + 1})">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
            <div class="text-center text-muted mt-2">
                Page ${pagination.currentPage} of ${pagination.totalPages} ‚Ä¢ 
                Showing ${pagination.itemsPerPage * (pagination.currentPage - 1) + 1} 
                to ${Math.min(pagination.itemsPerPage * pagination.currentPage, pagination.totalItems)} 
                of ${pagination.totalItems} bookings
            </div>
        `;

            paginationContainer.innerHTML = paginationHTML;
        }

        // Function to change page
        function changePage(page) {
            if (page < 1 || page > totalPages) return;
            loadBookings(page, currentStatusFilter);
        }

        // Function to refresh bookings
        function refreshBookings() {
            console.log('Refreshing bookings...');
            loadBookings(currentPage, currentStatusFilter);
        }

        // Function to show error message
        function showErrorMessage(message) {
            const tableContainer = document.getElementById('bookingsTableContainer');
            tableContainer.innerHTML = `
            <div class="alert alert-danger text-center py-4">
                <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                <h5>Error Loading Bookings</h5>
                <p class="mb-0">${escapeHtml(message)}</p>
                <button class="btn btn-primary mt-3" onclick="refreshBookings()">
                    <i class="fas fa-redo me-1"></i>Try Again
                </button>
            </div>
        `;
        }

        // Function to show no bookings message
        function showNoBookingsMessage() {
            const tableContainer = document.getElementById('bookingsTableContainer');
            tableContainer.innerHTML = `
            <div class="text-center py-5">
                <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No Bookings Found</h5>
                <p class="text-muted">There are no bookings to display at the moment.</p>
                ${currentStatusFilter !== 'all' ?
                    `<button class="btn btn-outline-primary mt-2" onclick="showAllBookings()">
                        Show All Bookings
                    </button>` : ''
                }
            </div>
        `;
        }

        // Function to show all bookings
        function showAllBookings() {
            document.getElementById('statusFilter').value = 'all';
            currentStatusFilter = 'all';
            currentPage = 1;
            loadBookings(currentPage, currentStatusFilter);
        }

        // Helper function to escape HTML
        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
