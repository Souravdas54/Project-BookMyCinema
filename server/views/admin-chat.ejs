        // ===========================
        // SOCKET.IO CONNECTION
        // ===========================
        socket.on('connect', () => {
            console.log('Admin Socket connected:', socket.id);
            showToast('Connected to chat server', 'success');

            // Register admin with socket
            socket.emit('register', adminId);

            // Load initial chats
            loadAdminChats();
        });

        socket.on('disconnect', () => {
            console.log('Socket disconnected');
            showToast('Disconnected from chat server', 'warning');
        });

        // ===========================
        // LOAD ADMIN CHATS
        // ===========================
        async function loadAdminChats() {
            try {
                console.log('Loading chats for admin:', adminId);
                const response = await fetch(`/chats/admin/list?adminId=${adminId}`, {
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'include'
                });

                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(`Failed to load chats: ${errorText}`);
                }

                const data = await response.json();
                console.log('Chats loaded:', data);

                if (data.success) {
                    chats = data.chats || [];
                    renderChatList(chats);
                    updateChatCount(chats.length);
                    showToast(`Loaded ${chats.length} chats`, 'success');
                } else {
                    throw new Error(data.message || 'Failed to load chats');
                }
            } catch (error) {
                console.error('Error loading chats:', error);
                showToast('Failed to load chats: ' + error.message, 'error');
            }
        }

        // ===========================
        // RENDER CHAT LIST
        // ===========================

        function renderChatList(chatListData) {
            const noChatsMessage = document.getElementById('no-chats-message');

            // ✅ Check if element exists
            if (!noChatsMessage) {
                console.error('no-chats-message element not found');
                return;
            }

            if (!chatListData || chatListData.length === 0) {
                noChatsMessage.style.display = 'flex';
                return;
            }

            noChatsMessage.style.display = 'none';

            // Clear existing chat items (keep the no-chats-message div)
            const chatItems = chatList.querySelectorAll('.chat-list-item');
            chatItems.forEach(item => item.remove());

            // Now render chat items
            chatListData.forEach(chat => {
                const otherParticipant = chat.participants?.find(p => p._id !== adminId) || {};
                const lastMessage = chat.lastMessage || {};

                const chatItem = document.createElement('div');
                chatItem.className = 'chat-list-item';
                chatItem.onclick = () => selectChat(chat, otherParticipant);

                // Generate avatar color
                const avatarColor = getColorFromString(otherParticipant._id || 'user');
                const userInitial = otherParticipant.name?.charAt(0).toUpperCase() || 'U';

                chatItem.innerHTML = `
            <div class="chat-avatar" style="background: ${avatarColor};">${userInitial}</div>
            <div class="chat-info">
                <div class="chat-info-header">
                    <span class="chat-user-name">${otherParticipant.name || 'Unknown User'}</span>
                    <span class="chat-time">${formatTime(lastMessage.createdAt)}</span>
                </div>
                <p class="chat-preview">${lastMessage.message || 'No messages yet'}</p>
            </div>
        `;

                chatList.appendChild(chatItem);
            });
        }

