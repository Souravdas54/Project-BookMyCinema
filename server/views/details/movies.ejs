            <!-- Movies Table -->
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-table me-2"></i>All Movies
                    <% if (searchQuery || genreFilter || statusFilter) { %>
                        <span class="badge bg-info ms-2">
                            Filtered: <%= movies.length %> results
                        </span>
                    <% } %>
                </div>
                <div class="card-body">
                    <% if (movies && movies.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Poster</th>
                                        <th>Movie Name</th>
                                        <th>Genre</th>
                                        <th>Language</th>
                                        <th>Duration</th>
                                        <th>Rating</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% movies.forEach((movie, index) => { %>
                                        <tr>
                                            <!-- Poster -->
                                            <td data-label="Poster">
                                                <% if (movie.poster) { %>
                                                    <img src="<%= movie.poster %>" alt="<%= movie.moviename %>" 
                                                         class="movie-poster" 
                                                         data-bs-toggle="modal" 
                                                         data-bs-target="#movieModal<%= movie._id %>">
                                                <% } else { %>
                                                    <div class="movie-poster bg-secondary d-flex align-items-center justify-content-center">
                                                        <i class="fas fa-film text-white"></i>
                                                    </div>
                                                <% } %>
                                            </td>
                                            
                                            <!-- Movie Name -->
                                            <td data-label="Movie Name">
                                                <strong><%= movie.moviename %></strong>
                                                <% if (movie.promoted) { %>
                                                    <span class="badge bg-warning ms-1">Promoted</span>
                                                <% } %>
                                                <div class="text-muted small">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    <%= new Date(movie.releaseDate).toLocaleDateString() %>
                                                </div>
                                            </td>
                                            
                                            <!-- Genre -->
                                            <td data-label="Genre">
                                                <span class="badge bg-primary"><%= movie.genre %></span>
                                            </td>
                                            
                                            <!-- Language -->
                                            <td data-label="Language">
                                                <span class="badge bg-info"><%= movie.language %></span>
                                            </td>
                                            
                                            <!-- Duration -->
                                            <td data-label="Duration">
                                                <%= movie.duration %>
                                            </td>
                                            
                                            <!-- Rating -->
                                            <td data-label="Rating">
                                                <div class="star-rating">
                                                    <% const rating = movie.rating || 0; %>
                                                    <% const maxRating = movie.ratingScale || 5; %>
                                                    <% for (let i = 1; i <= maxRating; i++) { %>
                                                        <% if (i <= rating) { %>
                                                            <i class="fas fa-star"></i>
                                                        <% } else { %>
                                                            <i class="far fa-star empty"></i>
                                                        <% } %>
                                                    <% } %>
                                                </div>
                                                <div class="small text-muted">
                                                    <%= rating %>/<%= maxRating %> 
                                                    (<%= movie.votes || 0 %> votes)
                                                </div>
                                            </td>
                                            
                                            <!-- Status -->
                                            <td data-label="Status">
                                                <% if (movie.promoted) { %>
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-star me-1"></i>Promoted
                                                    </span>
                                                <% } else { %>
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>Active
                                                    </span>
                                                <% } %>
                                                <div class="small text-muted mt-1">
                                                    <i class="fas fa-heart me-1"></i><%= movie.likes || 0 %> likes
                                                </div>
                                            </td>
                                            
                                            <!-- Actions -->
                                            <td data-label="Actions">
                                                <div class="action-buttons">
                                                    <!-- View Details Button -->
                                                    <a href="/movies/<%= movie._id %>" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    
                                                    <!-- Edit Button -->
                                                    <a href="/movies/edit/<%= movie._id %>" class="btn btn-edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    
                                                    <!-- Promote/Unpromote Button -->
                                                    <!-- <form method="POST" action="/movies/promote/<%= movie._id %>" style="display: inline;">
                                                        <input type="hidden" name="_method" value="PUT">
                                                        <button type="submit" class="btn btn-promote">
                                                            <% if (movie.promoted) { %>
                                                                <i class="fas fa-star"></i>
                                                            <% } else { %>
                                                                <i class="far fa-star"></i>
                                                            <% } %>
                                                        </button>
                                                    </form> -->
                                                    
                                                    <!-- Delete Button -->
                                                    <form method="POST" action="/movies/delete/<%= movie._id %>" style="display: inline;">
                                                        <input type="hidden" name="_method" value="DELETE">
                                                        <button type="submit" class="btn btn-delete" 
                                                                onclick="return confirm('Are you sure you want to delete this movie?');">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        
                                        <!-- Movie Details Modal -->
                                        <div class="modal fade movie-details-modal" id="movieModal<%= movie._id %>" tabindex="-1">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">
                                                            <i class="fas fa-film me-2"></i><%= movie.moviename %>
                                                        </h5>
                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-md-4 text-center">
                                                                <% if (movie.poster) { %>
                                                                    <img src="<%= movie.poster %>" alt="<%= movie.moviename %>" 
                                                                         class="img-fluid rounded mb-3" style="max-height: 300px;">
                                                                <% } else { %>
                                                                    <div class="bg-secondary rounded d-flex align-items-center justify-content-center mb-3" 
                                                                         style="height: 300px;">
                                                                        <i class="fas fa-film text-white fa-5x"></i>
                                                                    </div>
                                                                <% } %>
                                                                
                                                                <div class="mb-3">
                                                                    <span class="badge bg-primary fs-6"><%= movie.genre %></span>
                                                                    <span class="badge bg-info fs-6 ms-2"><%= movie.language %></span>
                                                                    <% if (movie.promoted) { %>
                                                                        <span class="badge bg-warning fs-6 ms-2">Promoted</span>
                                                                    <% } %>
                                                                </div>
                                                            </div>
                                                            
                                                            <div class="col-md-8">
                                                                <h4><%= movie.moviename %></h4>
                                                                
                                                                <div class="row mb-3">
                                                                    <div class="col-6">
                                                                        <strong><i class="fas fa-clock me-2"></i>Duration:</strong>
                                                                        <p><%= movie.duration %></p>
                                                                    </div>
                                                                    <div class="col-6">
                                                                        <strong><i class="fas fa-calendar me-2"></i>Release Date:</strong>
                                                                        <p><%= new Date(movie.releaseDate).toLocaleDateString() %></p>
                                                                    </div>
                                                                </div>
                                                                
                                                                <div class="row mb-3">
                                                                    <div class="col-6">
                                                                        <strong><i class="fas fa-star me-2"></i>Rating:</strong>
                                                                        <p>
                                                                            <%= movie.rating || 0 %>/<%= movie.ratingScale || 5 %> 
                                                                            (<%= movie.votes || 0 %> votes)
                                                                        </p>
                                                                    </div>
                                                                    <div class="col-6">
                                                                        <strong><i class="fas fa-heart me-2"></i>Likes:</strong>
                                                                        <p><%= movie.likes || 0 %></p>
                                                                    </div>
                                                                </div>
                                                                
                                                                <div class="mb-3">
                                                                    <strong><i class="fas fa-users me-2"></i>Cast:</strong>
                                                                    <p><%= Array.isArray(movie.cast) ? movie.cast.join(', ') : movie.cast %></p>
                                                                </div>
                                                                
                                                                <div class="mb-3">
                                                                    <strong><i class="fas fa-user-tie me-2"></i>Director:</strong>
                                                                    <p><%= Array.isArray(movie.director) ? movie.director.join(', ') : movie.director %></p>
                                                                </div>
                                                                
                                                                <div class="mb-3">
                                                                    <strong><i class="fas fa-align-left me-2"></i>Description:</strong>
                                                                    <p><%= movie.description %></p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <a href="/movies/edit/<%= movie._id %>" class="btn btn-primary">
                                                            <i class="fas fa-edit me-2"></i>Edit Movie
                                                        </a>
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                            Close
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Pagination -->
                        <% if (totalPages > 1) { %>
                            <nav aria-label="Movies pagination">
                                <ul class="pagination">
                                    <!-- Previous Page -->
                                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                        <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= searchQuery %>&genre=<%= genreFilter %>&status=<%= statusFilter %>">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                    
                                    <!-- Page Numbers -->
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %>&search=<%= searchQuery %>&genre=<%= genreFilter %>&status=<%= statusFilter %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                    <% } %>
                                    
                                    <!-- Next Page -->
                                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                        <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= searchQuery %>&genre=<%= genreFilter %>&status=<%= statusFilter %>">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        <% } %>
                        
                    <% } else { %>
                        <!-- Empty State -->
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-film"></i>
                            </div>
                            <h4>No Movies Found</h4>
                            <p class="text-muted mb-4">
                                <% if (searchQuery || genreFilter || statusFilter) { %>
                                    Try adjusting your search or filter criteria
                                <% } else { %>
                                    You haven't added any movies yet
                                <% } %>
                            </p>
                            <a href="/movies/create" class="btn btn-add">
                                <i class="fas fa-plus me-2"></i>Add Your First Movie
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>