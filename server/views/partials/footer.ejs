<script>
    // Update active users count with animation
    document.addEventListener('DOMContentLoaded', function() {
        // Update current year
        const currentYear = new Date().getFullYear();
        document.getElementById('currentYear').textContent = currentYear;
        
        // Animate active users count
        const activeUsersElement = document.getElementById('activeUsersCount');
        if (activeUsersElement) {
            let currentUsers = parseInt(activeUsersElement.textContent) || 156;
            
            // Simulate user count changes every 30 seconds
            setInterval(() => {
                const change = Math.floor(Math.random() * 10) - 3; // -3 to +6 change
                currentUsers = Math.max(120, currentUsers + change);
                
                // Animate the count change
                animateCountChange(activeUsersElement, currentUsers);
            }, 30000);
        }
        
        // Add hover effect to quick links
        const quickLinks = document.querySelectorAll('.footer-links-list a');
        quickLinks.forEach(link => {
            link.addEventListener('mouseenter', function() {
                this.style.transform = 'translateX(5px)';
            });
            
            link.addEventListener('mouseleave', function() {
                this.style.transform = 'translateX(0)';
            });
        });
        
        // System stats animation
        const statItems = document.querySelectorAll('.stat-item');
        statItems.forEach((item, index) => {
            item.style.opacity = '0';
            item.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                item.style.transition = 'all 0.5s ease';
                item.style.opacity = '1';
                item.style.transform = 'translateY(0)';
            }, index * 100);
        });
    });
    
    // Function to animate number changes
    function animateCountChange(element, targetValue) {
        const currentValue = parseInt(element.textContent) || 0;
        const duration = 1000; // 1 second
        const step = 20; // update every 20ms
        const increment = (targetValue - currentValue) / (duration / step);
        let current = currentValue;
        
        const timer = setInterval(() => {
            current += increment;
            
            if ((increment > 0 && current >= targetValue) || 
                (increment < 0 && current <= targetValue)) {
                current = targetValue;
                clearInterval(timer);
            }
            
            element.textContent = Math.round(current);
        }, step);
    }
    
    // Add click handler for version badge
    const versionBadge = document.querySelector('.version-badge');
    if (versionBadge) {
        versionBadge.addEventListener('click', function() {
            alert('SB Admin 2 Cinema Management System\nVersion: 2.0.1\nBuild Date: <%= new Date().toLocaleDateString() %>');
        });
    }
</script>